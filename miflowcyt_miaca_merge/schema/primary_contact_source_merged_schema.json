{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "MIFlowCyt Primary Contact - MIACA Source - corresponding to a person and their organization merging",
    "type": "object",
    "properties": {
        "emailAddress": {
            "description": "The primary contact's email address",
            "type": "string"
        },
        "@id": {
            "description": "The JSON-LD identifier",
            "type": "string",
            "format": "uri"
        },
        "@type": {
            "description": "The JSON-LD type",
            "type": "string",
            "format": "uri"
        },
        "@context": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                },
                {
                    "type": "array"
                }
            ],
            "description": "The JSON-LD context"
        },
        "name": {
            "description": "The primary contact's name",
            "type": "string"
        },
        "institution": {
            "minLength": 1,
            "description": "name of the institution/affiliation the researcher is working at",
            "type": "string"
        },
        "department": {
            "minLength": 1,
            "description": "department in the institution",
            "type": "string"
        },
        "ID": {
            "description": "The source identifier",
            "type": "string"
        },
        "country": {
            "minLength": 1,
            "description": "country the city is placed",
            "type": "string"
        },
        "city": {
            "minLength": 1,
            "description": "city the institution is placed",
            "type": "string"
        },
        "address": {
            "minLength": 1,
            "description": "address of the institution",
            "type": "string"
        }
    },
    "id": "https://w3id.org/mircat/miflowcyt_miaca_merge/schema/primary_contact_source_merged_schema.json",
    "description": "Merge between the MIFlowCyt Primary Contact and the MIACA Source - corresponding to a person and their organization"
}