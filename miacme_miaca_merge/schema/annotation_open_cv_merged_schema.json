{
    "description": "Merge between the MIACME annotation schema and the MIACA open_cv_schema",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "https://w3id.org/mircat/miacme_miaca_merge/schema/annotation_open_cv_merged_schema.json",
    "version": "1.0",
    "properties": {
        "@context": {
            "description": "The JSON-LD context",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                },
                {
                    "type": "array"
                }
            ]
        },
        "value": {
            "description": "The value of the annotation - it can be a string or a number (for coded values).",
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "number"
                }
            ]
        },
        "valueIRI": {
            "description": "The IRI of a concept or ontology term associated with the value. It can also be an empty string",
            "anyOf": [
                {
                    "format": "uri",
                    "type": "string"
                },
                {
                    "type": "string",
                    "maxLength": 0
                }
            ]
        },
        "name": {
            "description": "This contains the controlled vocabulary term",
            "type": "string"
        },
        "xref": {
            "description": "Refers to the term of the controlled vocabulary in an external database",
            "$ref": "xref_schema.json#"
        },
        "@id": {
            "description": "The JSON-LD identifier",
            "format": "uri",
            "type": "string"
        },
        "@type": {
            "description": "The JSON-LD type",
            "enum": [
                "Annotation"
            ],
            "type": "string"
        }
    },
    "type": "object",
    "title": "MIACME annotation schema - MIACA open_cv_schema merging"
}