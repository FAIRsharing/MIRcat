{
    "title": "MIACA open_cv_schema - MIACME annotation schema merging",
    "$schema": "http://json-schema.org/draft-04/schema",
    "properties": {
        "@type": {
            "format": "uri",
            "description": "The JSON-LD type",
            "type": "string"
        },
        "xref": {
            "description": "Refers to the term of the controlled vocabulary in an external database",
            "$ref": "xref_schema.json#"
        },
        "value": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "number"
                }
            ],
            "description": "The value of the annotation - it can be a string or a number (for coded values)."
        },
        "@id": {
            "format": "uri",
            "description": "The JSON-LD identifier",
            "type": "string"
        },
        "@context": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                },
                {
                    "type": "array"
                }
            ],
            "description": "The JSON-LD context"
        },
        "name": {
            "description": "This contains the controlled vocabulary term",
            "type": "string"
        },
        "valueIRI": {
            "description": "The IRI of a concept or ontology term associated with the value. It can also be an empty string",
            "anyOf": [
                {
                    "format": "uri",
                    "type": "string"
                },
                {
                    "maxLength": 0,
                    "type": "string"
                }
            ]
        }
    },
    "type": "object",
    "description": "Merge between the MIACA open_cv_schema and the MIACME annotation schema",
    "id": "https://w3id.org/mircat/miaca_miacme_merge/schema/open_cv_annotation_merged_schema.json"
}