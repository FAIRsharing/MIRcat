{
  "id": "https://w3id.org/MIRcat/miaca/ontology_annotation_schema.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "MIACA reagent schema",
  "description": "A reagent as defined by MIACA, Reagents are media, media supplements, kits, buffers and solutions, water and so on. ",
  "type": "object",
  "properties": {
    "@context": {
      "description": "The JSON-LD context",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "@id": {
      "description": "The JSON-LD identifier",
      "type": "string",
      "format": "uri"
    },
    "@type": {
      "description": "The JSON-LD type",
      "type": "string",
      "format": "uri"
    },

    "ontologyValue": {
      "type": "string"
    },
    "ontologySource": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    }
  }
}