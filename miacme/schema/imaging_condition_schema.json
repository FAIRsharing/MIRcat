{
  "id": "https://w3id.org/mircat/miacme/schema/imaging_condition_schema.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "MIACME investigation schema",
  "version" : "1.0",
  "description": "JSON-schema representing an investigation in MIACME",
  "type": "object",
  "required": [ "imagingModality", "temporalInformation", "channelReadout"],
  "properties": {
     "@context": {
      "description": "The JSON-LD context",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "@id": {
      "description": "The JSON-LD identifier",
      "type": "string",
      "format": "uri"
    },
    "@type": {
      "description": "The JSON-LD type",
      "type": "string",
      "enum": [
        "ImagingCondition"
      ]
    },
    "imagingModality" : {
      "type": "string",
      "description": "The modality. For example: confocal, microscopy, spinning disk, wide-field, multi-phonon, light-sheet, super-resolution, "
    },
    "temporalInformation": {
       "oneOf": [
         {
        "properties": {
          "temporalResolution": {
            "type": "string",
            "description": "The type of temporal acquisition",
            "enum": [ "endpoint"]
          }
        },
        "additionalProperties": false
         },
        {
        "properties": {
          "temporalResolution": {
            "type": "string",
            "description": "The type of temporal acquisition",
            "enum": [ "time-lapse" ]
          },
          "duration": {
            "type": "string"
          },
          "frequency": {
            "type": "string"
          }
        }
      }
    ]
    },
    "channelDefinition": {
      "description": "Identification of the label or constrasts",
      "type": "string"
    }
  }
}